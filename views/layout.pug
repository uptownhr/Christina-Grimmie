    script.
      function loadPage(location){
        $('main').load(location + ' .page')
        window.history.pushState(null, null, location)
      }
      $( document ).ready(function() {
        var vid = document.getElementById("music");
        vid.volume = .3;
        vid.play()

        window.onpopstate = function(event){
          loadPage(document.location.pathname)
        }

        $('header a').on('click', function(e){
          e.preventDefault()
          var location = $(this).attr('href')
          loadPage(location)
        })

        $('body').on('click', '.xbutton', function () {
          $('.xinvisible').hide();
          $('.video-frame').attr('src', '')
        })

        //close button activate for timeline page
        $('body').on('click', '.xbutton2', function () {
          $('.xinvisible-timeline').hide();
          $('.websiteRip').attr('src', '')
        })

        $('body').on('click', '.trigger-hidden', function () {
          var site = $(this).attr('href');
          $('.websiteRip').attr('src', site)
          $('.xinvisible-timeline').show();
          event.preventDefault();
        })
        $('body').on('click', '.icon', function (event) {
          var videoURL = $(this).attr('href');
          console.log(videoURL)
          $('.video-frame').attr('src', videoURL)
          $('.xinvisible').show();
          event.preventDefault();
        })
      })
